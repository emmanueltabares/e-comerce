head
  link#bootstrap-css(href='//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css' rel='stylesheet')
  script(src='//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js')
  script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
  link(rel="stylesheet", href="/css/login.css")
  
#login
  h3.text-center.text-white.pt-5
  .container
    #login-row.row.justify-content-center.align-items-center
      #login-column.col-md-6
        #login-box.col-md-12
          form#login-form.form(action='/api/login' method='post')
            h3.text-center.text-info Login
            .form-group
              label.text-info(for='userName') Username:
              br
              input#userName.form-control(type='text' name='userName')
            .form-group
              label.text-info(for='userPass') Password:
              br
              input#password.form-control(type='number' name='userPass')
            .form-group
              label.text-info(for='remember-me')
                span
            input.btn.btn-info.btn-md(type='submit' name='submit' value='Login')
            
          form(action="api/signup" method="post") 
            input.btn.btn-info.btn-md(type='submit' name='submit' value='Singup')