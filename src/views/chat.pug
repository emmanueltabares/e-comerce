head
  link#bootstrap-css(href='//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css' rel='stylesheet')
  script(src='//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js')
  script(src='//code.jquery.com/jquery-1.11.1.min.js')
  link(rel="stylesheet", href="/css/index.css")

.container
  .col-md-9 
    .form-area
      form#formChat(role='form')
        br(style='clear:both')
        h3(style='margin-bottom: 25px; text-align: center;') Centro de Mensajes
        .form-group
          input#name.form-control(type='text' name='name' placeholder='Name' required='')
        .form-group
          input#email.form-control(type='text' name='email' placeholder='Email' required='')
        .form-group
          input#subject.form-control(type='text' name='alias' placeholder='Alias' required='')
        .form-group
          input#subject.form-control(type='number' name='Age' placeholder='Age' required='')
        .form-group
          textarea#message.form-control(type='textarea' placeholder='Message' maxlength='140' rows='7')
          span.help-block
            p#characterLeft.help-block You have reached the limit
        button#submit.btn.btn-primary.pull-right(type='button' name='submit') Enviar mensaje


    script(src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.2.0/socket.io.js" integrity="sha512-WL6WGKMPBiM9PnHRYIn5YEtq0Z8XP4fkVb4qy7PP4vhmYQErJ/dySyXuFIMDf1eEYCXCrQrMJfkNwKc9gsjTjA==" crossorigin="anonymous" referrerpolicy="no-referrer")
    script(src="/public/main.js")  
