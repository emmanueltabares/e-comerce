html 
    head
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous") 
        title="Utilizando Pug"

    body  
        h1(class="text-center")="Guardar Productos"
        form(action="/api/productos/guardar" method="POST")
            div(class="container col-4 mb-3") 
                label(for="title" class="form-label")="PRODUCTO"  
                input(type="text" class="form-control" id="title" name="title")
                label(for="price" class="form-label")="PRICE"  
                input(type="number" class="form-control" id="price" name="price")
                label(for="thumbnail" class="form-label")="URL"  
                input(type="text" class="form-control mb-3" id="thumbnail" name="thumbnail")
                button(type="submit" class="btn btn-primary" onclick="newProduct()")="Guardar"

        div(class="text-center")
            h1(class="mb-4")='LISTA DE PRODUCTOS'

            if (getProducts)
            
              if getProducts.length >= 0
            
                table(class="table")
                    thead 
                        tr
                            th(scope='col')="ID" 
                            th(scope='col')="Producto" 
                            th(scope='col')="Precio" 
                            th(scope='col')="Imagen" 

                    tbody 
                        each product in getProducts
                            tr 
                                th(scope='row')=product.id
                                td=product.title
                                td=product.price
                                td=product.thumbnail
            else 
                p="No hay productos cargados"

      
        div(class="join-container")
            header.join-header
                h1
                    i.fas.fa-smile
                    |  Centro de Mensajes
            main.join-main
                form()
                    div.form-control
                        label(for='username') Username
                        input#username(type='text' name='username' placeholder='Enter username...' required='')
                    div.form-control
                        label(for='room') Chat
                        input#message(type='text' name="messages" placeholder="Enter message..." required)
                    button.btn(type='submit' onclick="sendData(this)") Send
                    div#messages

    script(src="/socket.io/socket.io.js")
    script(src="/main.js")  
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous")